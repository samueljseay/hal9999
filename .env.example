# Provider
DO_API_TOKEN=your_digitalocean_api_token_here

# Claude auth — use ONE of these:
# For Pro/Max subscription (recommended):
CLAUDE_CODE_OAUTH_TOKEN=your_oauth_token_here
# For API key (pay-as-you-go):
# ANTHROPIC_API_KEY=your_api_key_here

# Pool config
HAL_SNAPSHOT_ID=your_golden_image_snapshot_id
HAL_REGION=nyc1
HAL_PLAN=s-1vcpu-1gb
HAL_MAX_POOL_SIZE=5
HAL_SSH_KEY_ID=your_ssh_key_id

# Idle timeout (seconds). Per-provider defaults: lima=1800 (30min), do=300 (5min).
# HAL_IDLE_TIMEOUT_S=0            # Global override (0 = destroy immediately)
# HAL_LIMA_IDLE_TIMEOUT_S=1800
# HAL_DO_IDLE_TIMEOUT_S=300

# Pre-warm pool — minimum ready VMs per provider (default: 0, opt-in)
# HAL_MIN_READY=0
# HAL_LIMA_MIN_READY=1
# HAL_DO_MIN_READY=0
